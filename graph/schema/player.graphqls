# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Player {
  id: ID!
  name: String!
  logs: [Log!]!
  createdAt: Time!
}

extend type Query {
  players(limit: LimitFilter): [Player!]!
  player(id: ID!): Player!
}

input NewPlayer {
  name: String!
}

extend type Mutation {
  registerPlayer(input: NewPlayer!): Player!
}
