type Save {
  id: ID!
  name: String!
  player: Player!
  playerId: String!

  createdAt: Time!
  updatedAt: Time!

  graphData: Map!
}

extend type Query {
  saves(playerId: String): [Save!]!
  save(id: ID!): Save!

  customNodes(playerId: String): [CustomNode!]!
}

input NewSave {
  name: String!
  playerId: String!
  graphData: Map!
}

input NewCustomNode {
  name: String!
  playerId: String!
  graphData: Map!
  recipeData: Map!
}

extend type Mutation {
  createNewSave(input: NewSave!): Save!
  updateSave(id: String!, graphData: Map!): Save!
  deleteSave(id: String!): Boolean!

  createCustomNode(input: NewCustomNode!): CustomNode!
}

type CustomNode {
  id: ID!
  name: String!
  player: Player!
  playerId: String!
  createdAt: Time!
  updatedAt: Time!
  graphData: Map!
  recipeData: Map!
}
