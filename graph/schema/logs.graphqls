enum LogType {
  PlaceBlock
}

type Log {
  id: ID!
  type: LogType!
  message: String!
  player: Player!
  playerId: String!
  createdAt: Time!
  attributes: Map
}

extend type Query {
  logs(playerId: String): [Log!]!
}

input LogInput {
  message: String!
  type: LogType!
  playerName: String!
  attributes: Map
}

extend type Mutation {
  log(input: LogInput!): Log!
}
